{
  "compilerOptions": {
    "rootDir": "./src",
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "declaration": true,
    "outDir": "build",
    "baseUrl": "./",
    "lib": ["ES6", "dom"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
